<launch>
	<arg	name="model"	/>
	<!--param	name="robot_description"	textfile="$(find mybot_description)/urdf/piro.urdf.xacro"/-->
	<!-- urdf xml robot description loaded on the Parameter Server, converting the xacro into a proper urdf file-->
	<param name="robot_description" command="$(find xacro)/xacro '$(find mybot_description)/urdf/piro.urdf.xacro'" />
	<param	name="use_gui"	value="true"/>
	<node	name="joint_state_publisher"	pkg="joint_state_publisher" type="joint_state_publisher"	/>
	<node	name="robot_state_publisher"	pkg="robot_state_publisher" type="state_publisher"	/>
	<node	name="rviz"	pkg="rviz"	type="rviz"	args="-d	$(find mybot_description)/urdf.rviz"	required="true"	/>
</launch>